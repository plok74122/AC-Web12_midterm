<div class="form-group">
  <%= post.label :name, "主題名稱" %>
  <%= post.text_field :name, :class => "form-control" %>
</div>
<div class="form-group">
  <%= post.collection_radio_buttons(:category_id, Category.all, :id, :name) %>
</div>
<div class="form-group">
  <%= post.label :content, "內文：" %>
  <%= post.text_area :content, :class => "form-control" %>
</div>

<% if @post.errors.any? %>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>